<h1>To Do List Categories:</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
}

@foreach (var category in Model)
{
  <h3><a href="/categories/@category.GetId()">@category.GetName()</a></h3>
}

<h4><a href="/categories/new">Add a new category</a></h4>
